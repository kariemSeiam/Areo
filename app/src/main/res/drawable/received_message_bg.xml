<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/received_message_bg.xml -->
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">
    <item>
        <shape>
            <solid android:color="@color/back_cards"/> <!-- Light gray background -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:right="16dp" android:bottom="16dp">
        <shape>
            <solid android:color="@color/back_cards"/>
            <corners android:bottomRightRadius="16dp"/>
            <size android:width="16dp" android:height="16dp"/>
        </shape>
    </item>
</layer-list>

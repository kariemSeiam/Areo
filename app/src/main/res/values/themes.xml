<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.Areo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme attributes -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Ensure content is not obscured by the system bars -->
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <!-- Theme extending the base theme -->
    <!-- Light theme extending the base theme -->
    <style name="Theme.Areo" parent="Base.Theme.Areo">
        <item name="android:windowLightStatusBar">false</item>
        <item name="fontFamily">@font/cairo</item>
        <item name="android:fontFamily">@font/cairo</item>
    </style>

    <style name="StartTripStateButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/start_trip</item>
    </style>

    <style name="StopTripStateButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/stop_trip</item>
    </style>
</resources>
